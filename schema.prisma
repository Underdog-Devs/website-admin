datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  image        String?
  userType     String
  password     String
  twitterUrl   String?
  facebookUrl  String?
  linkedinUrl  String?
  instagramUrl String?
  youtubeUrl   String?
  token        String?  @unique
  createdAt    DateTime @default(now()) @map(name: "created_at")
  updatedAt    DateTime @updatedAt @map(name: "updated_at")

  @@map(name: "users")
}

model Spotlight {
  id           String  @id @default(cuid())
  menteeName   String
  portfolioUrl String?
  twitterUrl   String?
  facebookUrl  String?
  linkedinUrl  String?
  instagramUrl String?
  youtubeUrl   String?
  imageUrl     String
  about        String
}

model Blog {
  id       String @id @default(cuid())
  authorId String
  entry    Json
}
